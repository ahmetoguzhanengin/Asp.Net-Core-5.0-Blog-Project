@model EntityLayer.Concrete.Message2

                    <div class="mail-body">

                        <form method="post">
                            <div class="form-group row">
                                @* <label class="col-sm-2 col-form-label">Alıcı:</label>

                                <div class="col-sm-10"><input type="text" class="form-control" placeholder="yazar@howrite.com"/></div>*@
                                <label for="ReceiverID">Alıcı Seçimi</label>
                                @Html.DropDownListFor(x=>x.ReceiverID, (List<SelectListItem>)ViewBag.RecieverUser, new{@class="form-control"})
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Konu:</label>

                                <div class="col-sm-10"><input type="text" name="Subject" class="form-control" /></div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Mesajınız:</label>

                                <textarea class="form-control" name="MessageDetails" rows="4" cols="10"></textarea>
                            </div>
                            <div class="mail-body text-right tooltip-demo">
                                <button class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Gönder"><i class="fa fa-reply"></i> Gönder</button>
                                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Vazgeç"><i class="fa fa-times"></i> Vazgeç</button>
                                <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslağa Taşı"><i class="fa fa-pencil"></i> Taslak</button>
                            </div>
                        </form>

                    </div>


                    <div class="clearfix"></div>
