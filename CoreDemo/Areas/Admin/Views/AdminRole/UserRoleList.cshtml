@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Kullanıcı Rol Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRole/AssingRole/@item.Id" class="btn btn-outline-warning">Role Ata</a></td>
        </tr>

    }

</table>
<a href ="/Admin/AdminRole/Index/" class="btn btn-primary">Rol Listesine Dön</a>
