@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Gelen Kutusu</h4>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Gönderen resmi</th>
                    <th>Gönderen Adı</th>
                    <th>Gönderen Mail</th>
                    <th>Konu</th>
                    <th>Tarih</th>
                    <th>Mesajı Aç</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MessageID</td>
                        <td class="py-1">
                            <img src="@item.SenderUser.WriterImage" alt="image" />
                        </td>
                        <td> @item.SenderUser.WriterName </td>
                        <td> @item.SenderUser.WriterMail </td>
                        <td> @item.Subject </td>
                        <td> @(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy")) </td>
                        <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a> </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Oluştur</a>
    </div>
</div>

