@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Mesaj Oluştur</h1>
<br />
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="ReceiverID">Alıcı Seçimi</label>
            @Html.DropDownListFor(x=>x.ReceiverID, (List<SelectListItem>)ViewBag.RecieverUser, new{@class="form-control"})
            <br />
            @Html.Label("Konu")
            @Html.TextBoxFor(x=>x.Subject, new {@class = "form-control"})
            <br />
            @Html.Label("Mesajınız")
            @Html.TextAreaFor(x=>x.MessageDetails, 15,3, new {@class = "form-control"})
            <br />
            <button class="btn btn-info">Mesajı Gönder  </button>     
        </div>
    </div>

   

}
